{{>_global/head}}
{{> organisms/header}}

<div class="tl-split-view">
    <div class="tl-split-content">
        <div class="tl-header-container">
            <div class="tl-header-logo">
                <img src="https://placehold.it/58x60">
            </div>
            {{> organisms/cloudsign-header-menu}}
            {{> molecules/header-right title="Quotation 2016/04 - Logo design" status-class="bg-success" status-text="paid"}}
        </div>
        <div class="tl-split-body-wrapper">
            <div>
                <div class="tl-split-body">
                    <div class="tl-card tl-container">
                        <h2>Fonts & colors</h2>
                        <div class="row">
                            <div class="col-sm-4">
                                <h1>Header 1</h1>
                                <h2>Header 2</h2>
                                <p>Default</p>
                                <p class="muted">Muted</p>
                                <p class="subtitle">Subtitle</p>
                                <p class="small">Small font</p>
                                <p class="smaller">Smaller font</p>
                            </div>
                            <div class="col-sm-4">
                                <br>
                                <p class="text-success">.text-success</p>
                                <p class="text-error">.text-error</p>
                                <p class="text-warning">.text-warning</p>
                                <p class="text-info">.text-info</p>
                            </div>
                            <div class="col-sm-4">
                                <br>
                                <div class="bg-success" style="padding: 10px 20px">.bg-success</div>
                                <br>
                                <div class="bg-error" style="padding: 10px 20px">.bg-error</div>
                                <br>
                                <div class="bg-warning" style="padding: 10px 20px">.bg-warning</div>
                                <br>
                                <div class="bg-info" style="padding: 10px 20px">.bg-info</div>
                            </div>
                        </div>
                    </div>
                    <!-- Invoice dropdown -->
                    {{> molecules/invoice-dropdown text="invoices"}}

                    {{> organisms/not-found title="Looks like there are no invoices" subtitle="Try changing the filter in the upper right corner!"}}
                    <!-- quotation detail -->
                    {{> organisms/quotation-card-detail status-class="text-redded" status-text="overdue"}}
                    {{> organisms/quotation-card-detail status-class="text-pending" status-text="not paid"}}
                    {{> organisms/quotation-card-detail status-class="text-success" status-text="paid"}}
                    <br/>
                    <!-- quotation accept -->
                    {{> organisms/quotation-accept name="Michael Myers"}}
                    <br/>
                    <!-- form data -->
                    {{> organisms/invoice-form-group}}
                    {{> organisms/invoice-pay-card}}
                    {{> organisms/invoice-pay2-card}}
                    {{> organisms/invoice-pay3-card}}
                    <!-- Notifications -->
                    {{> organisms/notifications}}
                    <!-- feedback send -->
                    {{> organisms/invoice-feedback-card}}
                    <br/>
                    <!-- feedback messages -->
                    {{> organisms/invoice-feedback}}
                </div>
                {{> molecules/footer-menu}}
            </div>
        </div>
    </div>
    <div class="tl-split-bg"></div>
</div>


{{>_global/foot}}